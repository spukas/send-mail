{
  "name": "server",
  "version": "1.0.0",
  "engines": {
    "node": "8.6.0",
    "yarn": "1.3.2"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "(cd ./client && yarn start)",
    "dev": "concurrently \"yarn server\" \"yarn client\" \"yarn webhook\"",
    "client-install": "(cd ./client && yarn install)",
    "client-build": "(cd ./client && yarn run build)",
    "heroku-postbuild": "YARN_PRODUCTION=false yarn run client-install && yarn run client-build",
    "webhook": "lt -p 5000 -s lspkwbhkpst"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.0",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.2",
    "localtunnel": "^1.8.3",
    "mongoose": "^4.13.2",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "sendgrid": "^5.2.3",
    "stripe": "^5.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "nodemon": "^1.12.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0"
  }
}
